{
  "name": "@lunatest/cli",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "bin": {
    "lunatest": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest run",
    "lint": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@lunatest/core": "workspace:*",
    "@lunatest/runtime-intercept": "workspace:*",
    "commander": "^14.0.3",
    "tinyglobby": "^0.2.15"
  }
}
